<Window x:Name="Knappen" x:Class="Uppgift_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift_1"
        mc:Ignorable="d"
        Title="Knappen" Height="340" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Grid.ColumnSpan="2" Margin="10,0,10,10">
            <Border.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFCAE0E8" Offset="0.736"/>
                </LinearGradientBrush>
            </Border.OpacityMask>
            <Button x:Name="btnKlickIt" Content="Klick på mig" Margin="100,82,106,132" Click="btnKlickIt_Click"/>
        </Border>

    </Grid>
</Window>
